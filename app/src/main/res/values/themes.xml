<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TheActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/TheActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="TheActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/light_green_600</item>

        <!-- Support library compatibility -->
        <item name="background">@color/light_green_600</item>
    </style>

</resources>
